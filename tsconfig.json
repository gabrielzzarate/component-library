{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/**/*",
    "global.d.ts"
  ],
  "plugins": [
    {
      "name": "typescript-styled-plugin"
    }
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings.d.ts"
  ]
}